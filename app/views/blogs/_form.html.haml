= form_for(blog) do |f|
  - if blog.errors.any?
    #error_explanation
      %h2
        = pluralize(blog.errors.count, "error")
        prohibited this blog from being saved:
      %ul
        - blog.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :domain
    = f.text_field :domain
  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit
