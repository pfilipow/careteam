!!!
%html
  %head

    %title 
      = @blog ? @blog.title : "Careteam Blogs"

    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body

    .global-header.pure-g

      .pure-u-1.top-space

      .pure-u-1.pure-u-md-1-3
        .pure-menu
          %a.pure-menu-heading{:href => "#{root_path}"}
            - if @blog 
              %i.fa.fa-home 
              #{@blog.title} | #{@blog.domain}
            -else
              Careteam Blogs

      .pure-u-1.pure-u-md-2-3
        .pure-menu.pure-menu-horizontal.nav
          %ul.pure-menu-list
            %li.pure-menu-item
              = link_to blogs_path, class: "pure-menu-link" do
                %i.fa.fa-newspaper-o
                Blog Listing
           
            - if user_signed_in?
              %li.pure-menu-item
                = link_to new_article_path, class: "pure-menu-link" do
                  %i.fa.fa-pencil-square-o
                  New Article

              %li.pure-menu-item
                = link_to edit_user_registration_path, class: "pure-menu-link" do
                  %i.fa.fa-user
                  = current_user.email
            - else

              %li.pure-menu-item
                = link_to new_user_session_path, class: "pure-menu-link" do
                  %i.fa.fa-sign-in
                  Sign In


    %p#notice= notice

    = yield
